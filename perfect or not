#include<stdio.h>
int main()
{
    int num,sum=0,a=0;
    printf("enter the number you want to find perfect number or not");
    scanf("%d",&num);
    for(a=1;a<num;a++)
    {
        if(num%a==0)
        {
            sum=sum+a;
        }
    }
        if(sum==num)
        {
            printf("the number is perfect");
        }
        else
        {
            printf("the number is not perfect");
        }
    
    return 0;
}
