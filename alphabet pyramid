#include <stdio.h>
int main() {
 int a, b, rows;
 char input, alphabet = 'A';
 printf("Enter an uppercase character you want to print in the last row:");
 scanf("%c", &input);
 for (a = 1; a <=(input - 'A' + 1) ; ++a) {
      for (b = 1; b <= a; ++b) {
         printf("%c",alphabet);
      }
      ++alphabet;
      printf("\n");
   }
   return 0;
}
